@model CoverType

<form method="post" asp-action="DeleteItem">
    <input asp-for="Id" hidden />   @*Dit zorgt ervoor dat de id word meegeven aan de controller*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete CoverType</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            <span asp-validation-for="Name" class="text-danger" ></span>
        </div>
        <button type="submit" class="btn btn-primary btn-danger" style="width:150px" >Delete</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px" >Back to list</a>
    </div>
</form> 

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
